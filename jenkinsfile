pipeline {
  agent {label 'Jenkins-agent'}
  tools{
       jdk 'Java17'
	   maven 'Maven3'
	   }
	   stages {
	           stage("Cleanup Workspace"){
                	   steps {
					   cleanWs()
				 }}
			   stage("Checkout for SCM"){
			           steps {
					   git branch: 'Main' , credentails : 'github' , url: 'https://github.com/NagamYella/Newproject.git'
					  }}
		        stage("Build Application"){
				      steps{
					      sh 'mvn clean package'
					  }}
				stage("Test Application"){
				     steps {
					     sh 'mvn test'
						 }}
	   }
}
